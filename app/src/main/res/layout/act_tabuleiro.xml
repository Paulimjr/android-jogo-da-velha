<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tabuleiro">

    <RelativeLayout
        android:id="@+id/layout_info"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- PLAYER ONE -->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/text_name_player_one"
                    android:text="JOGADOR 0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name_player_one"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:textColor="@color/colorWhite"
                    android:id="@+id/point_player_one"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <!-- EMPATES -->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/text_name_empate"
                    android:text="Empates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_name_empate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="0" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/text_name_player_two"
                    android:text="JOGADOR X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp"
                    android:id="@+id/name_player_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorWhite"
                    android:layout_below="@+id/name_player_one"
                    android:id="@+id/point_player_two"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Tabuleiro -->
    <RelativeLayout
        android:layout_below="@+id/layout_info"
        android:layout_above="@+id/layout_buttons_info"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="#dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Line 1 -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:padding="25dp"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/tab_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:id="@+id/tab_two"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/tab_three"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!-- Line 2 -->
            <LinearLayout
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/line_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/tab_four"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:id="@+id/tab_five"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/tab_six"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!-- Line 3 -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/line_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/tab_seven"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="64sp"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:id="@+id/tab_eight"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="64sp"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/tab_nine"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Botoes do game -->
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_buttons_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btn_left_game"
                android:background="@drawable/shape_button"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/title_left_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>