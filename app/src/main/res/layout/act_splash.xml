<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/SplashTheme"
    android:background="@drawable/shape_background"
    tools:context=".Splash">


    <ImageView
        android:layout_marginBottom="6dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/text_splash_name"
        android:id="@+id/img_slash"
        android:src="@drawable/ic_app"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/text_splash_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="Online"
        android:layout_below="@+id/text_splash_name"
        android:id="@+id/text_splash_title_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginBottom="12dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:text="@string/title_app_version"
        android:id="@+id/text_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>